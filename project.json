{
	"name": "koralle",
	"version": "0.0.5",
	"dependencies": [
		"../plankton/base/project.json",
		"../plankton/call/project.json",
		"../plankton/string/project.json",
		"../plankton/xml/project.json",
		"../plankton/object/project.json",
		"../plankton/path/project.json",
		"../plankton/args/project.json"
	],
	"roottask": {
		"active": true,
		"name": "all",
		"type": "group",
		"sub": [
			{
				"active": true,
				"name": "logic-link",
				"type": "concat",
				"parameters": {
					"inputs": [
						"../plankton/base/build/logic.js",
						"../plankton/call/build/logic.js",
						"../plankton/string/build/logic.js",
						"../plankton/xml/build/logic.js",
						"../plankton/object/build/logic.js",
						"../plankton/path/build/logic.js",
						"../plankton/args/build/logic.js",
						"source/disclaimer.js",
						"temp/koralle.js"
					],
					"output": "build/koralle.js"
				},
				"sub": [
					{
						"active": true,
						"name": "logic-compile",
						"type": "typescript",
						"parameters": {
							"output": "ES5",
							"allowUnreachableCode": true,
							"inputs": [
								"../plankton/base/build/logic.d.ts",
								"../plankton/call/build/logic.d.ts",
								"../plankton/string/build/logic.d.ts",
								"../plankton/xml/build/logic.d.ts",
								"../plankton/object/build/logic.d.ts",
								"../plankton/path/build/logic.d.ts",
								"../plankton/args/build/logic.d.ts",
								"source/base.ts",
								"source/helpers/message.ts",
								"source/helpers/cliout.ts",
								"source/helpers/graph.ts",
								"source/helpers/gnumake.ts",
								"source/helpers/ant.ts",
								"source/helpers/misc.ts",
								"source/actions/action.ts",
								"source/actions/action_exec.ts",
								"source/actions/action_echo.ts",
								"source/actions/action_koralle.ts",
								"source/actions/action_build.ts",
								"source/actions/action_gnumake.ts",
								"source/actions/action_ant.ts",
								"source/actions/action_mkdir.ts",
								"source/actions/action_touch.ts",
								"source/actions/action_copy.ts",
								"source/actions/action_concat.ts",
								"source/actions/action_lessc.ts",
								"source/actions/action_babel.ts",
								"source/actions/action_tsc.ts",
								"source/actions/action_php.ts",
								"source/actions/action_gitpull.ts",
								"source/actions/action_schwamm-create.ts",
								"source/actions/action_schwamm-apply.ts",
								"source/tasks/task.ts",
								"source/tasks/task_group.ts",
								"source/tasks/task_dependency.ts",
								"source/tasks/task_external.ts",
								"source/tasks/task_script.ts",
								"source/tasks/task_empty.ts",
								"source/tasks/task_copy.ts",
								"source/tasks/task_concat.ts",
								"source/tasks/task_lesscss.ts",
								"source/tasks/task_babel.ts",
								"source/tasks/task_typescript.ts",
								"source/tasks/task_php.ts",
								"source/tasks/task_schwamm-create.ts",
								"source/tasks/task_schwamm-apply.ts",
								"source/outputs/output.ts",
								"source/outputs/output_regular.ts",
								"source/outputs/output_ant.ts",
								"source/outputs/output_gnumake.ts",
								"source/project.ts",
								"source/main.ts"
							],
							"output": "temp/koralle.js"
						}
					}
				]
			},
			{
				"active": false,
				"name": "documentation",
				"type": "group",
				"sub": [
					{
						"active": true,
						"name": "jsdoc",
						"type": "script",
						"parameters": {
							"inputs": [
								"build/koralle.js"
							],
							"outputs": [
								"documentation/generated"
							],
							"interpreter": "/bin/bash",
							"path": "tools/jsdoc.sh"
						}
					},
					{
						"active": true,
						"name": "diagram",
						"type": "script",
						"parameters": {
							"inputs": [
								"documentation/structure/structure.gv"
							],
							"outputs": [
								"documentation/structure/structure.svg"
							],
							"interpreter": "/bin/bash",
							"path": "tools/graphviz.sh"
						}
					}
				]
			}
		]
	}
}

